<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo"
    tools:context=".actividades.JuegoMainActivityInflada">

    <LinearLayout
        android:id="@+id/espacioTablero"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="70"
        android:gravity="center"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/espacioTeclado"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="30"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/q"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="Q"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/w"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="W"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/e"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="E"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/r"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="R"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/t"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="T"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/y"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="Y"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/u"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="U"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/i"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="I"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/o"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="O"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/p"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="P"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/a"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="A"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/s"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="S"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/d"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="D"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/f"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="F"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/g"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="G"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/h"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="H"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/j"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="J"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/k"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="K"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/l"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="L"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/enye"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="Ã‘"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/z"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="Z"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/x"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="X"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/c"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/v"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="V"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/b"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="B"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/n"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="N"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/m"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/blue"
                android:text="M"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton_borrar"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/blue"
                android:text="@string/borrar"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>



            <Button
                android:id="@+id/boton_enviar"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/blue"
                android:text="@string/enviar"
                android:textColor="@color/black"
                android:textSize="15sp"></Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>